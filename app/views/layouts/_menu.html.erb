<div id="banner">
	<%= image_tag 'logo.svg', alt: 'The Pragmatic Bookshelf' %>
	<span class="title"><%= @page_title %></span>
</div>

<div id="columns">
	<div id="side">
		<div id="cart">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
				  <%= render @cart %>
  			<% end %>
			<% end %>
    </div>        
		<ul>
			<li><%= link_to "Home", store_index_path %></li>
			<li><%= link_to "Products", products_path %></li>			
		</ul>
</div>